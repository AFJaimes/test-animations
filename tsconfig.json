{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@animations/definitions/*": [
        "definitions/*"
      ],
      "@animations/components/*": [
        "components/*"
      ],
      "@animations/services/*": [
        "services/*"
      ],
      "@animations/utils/*": [
        "utils/*"
      ],
      "@animations/hooks/*": [
        "hooks/*"
      ],
      "@animations/mocks/*": [
        "mocks/*"
      ]
    },
    "incremental": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "pages/_app.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
